<h1>Dashboard</h1>
<h3>Welcome {{name}}.
<h5>Your Notes:</h5>
{{#if notes}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each notes}}
        <tr>
          <td><a href="/notes/{{_id}}">{{title}}</a></td>
          <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
          <td><span class="dash-status">{{status}}</span></td>
          <td>
            <a href="/notes/edit/{{_id}}" class="btn btn-float"><i class="fas fa-edit"></i></a>
            
            <form action="/notes/{{_id}}" method="POST" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn red" type="submit"><i class="fas fa-trash"></i></button>
              
            </form>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <h5>You have not created any Notes!</h5>
{{/if}}